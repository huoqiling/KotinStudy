<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/colorAccent">

    <ImageView
        android:id="@+id/btnLeftImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/iv_return_white" />

    <FrameLayout
        android:id="@+id/flRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:minWidth="45dp">


        <TextView
            android:id="@+id/tvRightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="rightText" />


        <ImageView
            android:id="@+id/ivRightImage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="14dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/flRight"
        android:layout_toRightOf="@+id/btnLeftImage"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:text="标题" />
</RelativeLayout>